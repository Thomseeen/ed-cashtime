<Window
    x:Class="ed_cashtime.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ed_cashtime"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ED CashTime"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBox
            Grid.Row="0"
            Text="{Binding CombinedLogStrings, Mode=OneWay}"
            VerticalScrollBarVisibility="Auto" />

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button
                x:Name="StartListening"
                Width="80"
                Height="20"
                Margin="5"
                Click="StartListening_Click"
                Content="Start Listening" />
            <Button
                x:Name="StopListening"
                Width="80"
                Height="20"
                Margin="5"
                Click="StopListening_Click"
                Content="Stop Listening" />
        </StackPanel>
    </Grid>
</Window>
