<Window
    x:Class="EdCashtime.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EdCashtime"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:util="clr-namespace:EdCashtime.Util"
    Title="ED CashTime"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
    mc:Ignorable="d">
    <Window.Resources>
        <util:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </Window.Resources>

    <DockPanel>
        <StatusBar Height="20" DockPanel.Dock="Bottom">
            <TextBlock
                Width="200"
                IsEnabled="False"
                Text="{Binding MessagesCnt, Mode=OneWay}" />
        </StatusBar>

        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*" />
                <RowDefinition Height="5*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBox
                Grid.Row="0"
                HorizontalScrollBarVisibility="Auto"
                IsReadOnly="True"
                Text="{Binding CombinedAlertStrings, Mode=OneWay}"
                VerticalScrollBarVisibility="Auto" />

            <ListView Grid.Row="1" ItemsSource="{Binding SearchCommodities, Mode=OneWay}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding DisplayName}" Header="Name" />
                        <GridViewColumn DisplayMemberBinding="{Binding BestStationName}" Header="Best Station" />
                        <GridViewColumn DisplayMemberBinding="{Binding BestSystemName}" Header="Best System" />
                        <GridViewColumn DisplayMemberBinding="{Binding BestDescString}" Header="Data" />
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <Button
                    x:Name="StartListening"
                    Width="80"
                    Height="20"
                    Margin="5"
                    Click="StartListening_Click"
                    Content="Start Listening"
                    IsEnabled="{Binding Listening, Converter={StaticResource InverseBooleanConverter}, Mode=OneWay}" />
                <Button
                    x:Name="StopListening"
                    Width="80"
                    Height="20"
                    Margin="5"
                    Click="StopListening_Click"
                    Content="Stop Listening"
                    IsEnabled="{Binding Listening, Mode=OneWay}" />
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
